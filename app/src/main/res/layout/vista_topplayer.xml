<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#263238"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vistaplayer_avatar"
                android:src="@drawable/gameicon2"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juego : "
                android:id="@+id/vistaplayer_game"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textSize="22dp"
                android:id="@+id/vistaPlayer_name"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biografia : "
                android:id="@+id/vistaplayer_biografia"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                />

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:background="@drawable/ic_remove_circle_outline_black_24dp"
                android:id="@+id/vistaplayer_btnclose"
                />
        </LinearLayout>

    </ScrollView>


</LinearLayout>